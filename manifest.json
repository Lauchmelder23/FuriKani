{
    "name": "FuriKani",
    "description": "Removes furigana on websites based on your WaniKani level",
    "version": "0.6.3",
    "icons": {
        "16": "res/icon16.png",
        "48": "res/icon48.png",
        "128": "res/icon128.png"
    },
    "manifest_version": 3,
    "action": {
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["src/content.js"]
        }
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "permissions": ["storage"]
}